<div class="stolen-frosty span6 offset1 text-center">
	<h1 class="stolen-h1">
		Lesson: <%= @pic.lesson %> 
	</br>
	</h1>
	<h2>
		I Felt: <%= @pic.emotion %>
		</br>
		And I learned: <%= @pic.learned %>
	</h2>
	<%= image_tag @pic.image %>
		</br>
	<%= link_to 'Back', pics_path, :class => 'btn btn-warning btn-large'    %>
	<%= link_to 'Delete', pic_path(@pic), :method => :delete, :class => 'btn btn-danger btn-large', :confirm => "Are you Sure?" %>
	<%= link_to 'Edit', edit_pic_path(@pic), :class => 'btn btn-warning btn-large' %>

</div>